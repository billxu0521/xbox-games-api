{
  "version": 2,
  "builds": [
    {
      "src": "index.js",
      "use": "@now/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "index.js"
    }
  ],
  "rewrites": [
    {
      "source": "/api/image/:path*",
      "destination": "/api/image"
    }
  ],
  "headers": [
    {
      "source": "/api/:path*",
      "headers" : [
        {
          "key" : "Access-Control-Allow-Credential",
          "value" : "true"
        },
        {
          "key" : "Access-Control-Allow-Origin",
          "value" : "*"
        },
        {
          "key" : "Access-Control-Allow-Methods",
          "value" : "GET"
        }
      ]
    }
  ]
}
